generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SocialUser{
  id       Int  @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  created_at DateTime @default(now())

}


